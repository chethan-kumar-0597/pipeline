pipeline {
  agent any	
  stages {
	  stage ('BUILD') {
      parallel { 
      stage ("TEST ON CHROME") {
      steps {
        echo "This is Test on Chrome Browser" 
	      sh 'sleep 10;exit 0'
      }  
    }  
        stage ("TEST ON SAFARI") {
      steps {
        echo "This is Test on SAFARI Browser" 
	      sh 'sleep 10;exit 0'
      }  
    }
        stage ("TEST ON Opera Mini") {
      steps {
        echo "This is Test on Opera Mini Browser" 
	      sh 'sleep 5;exit 0'
      }  
    }
}
      }
    }
  }
    
